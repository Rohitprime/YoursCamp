<% layout('layouts/boilerplate.ejs') %> 
<body>
   <h1 class="text-center text-uppercase font-italic  text-dark">register</h1>
   <div class="card" style="background-color: #ceedf2; border: #ceedf2;">
      <div class="card-body">
         <div class="row ">
            <div class="col-sm-6 offset-sm-3 rounded-top shadow-lg " style="background-color: #1A4341;">
               <img class="card-img-top  my-1" src="/images/tree.jpg" alt="error">
            </div>
            <div class="col-sm-6 offset-sm-3 rounded-bottom shadow-lg " style="background-color: #1A4341;">
               <form action="/register" method="POST" class="form-group needs-validation " novalidate >
                  <div class="my-1">
                     <label for="title"class="text-light">Name</label>
                     <input type="text" name="username" id="title" class="form-control" required>
                  </div>
                  <div class="my-1">
         
                     <label for="location" class="text-light" >Password</label>
                     <input type="password" name="password" id="location" class="form-control" required>
                  </div>
                  <div class="my-1">
                     <label for="img" class="text-light" >Email</label>
                     <input type="email" name="email" id="img" class="form-control" required>
                  </div>
                  
                  <div class="text-center">
                     <button class="btn btn-success my-3 px-4">submit</button>
                  </div>
               </form>
            </div>
         </div>
      </div>
    </div>
  
</body>
